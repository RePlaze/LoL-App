<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:columnCount="5"
    android:orientation="horizontal"
    android:padding="5dp">

    <!-- Grid Item 1 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- Outer CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="81dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/itemImage1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:shapeAppearanceOverlay="@style/rounded"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itemName1"
            style="@style/BoldSFProRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Item Name 1"
            android:textColor="#dadadc" />
    </LinearLayout>

    <!-- Grid Item 2 (Repeat the code below for the other 4 grid items) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- Outer CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="81dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/itemImage2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:shapeAppearanceOverlay="@style/rounded"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itemName2"
            style="@style/BoldSFProRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Item Name 2"
            android:textColor="#dadadc" />
    </LinearLayout>
</GridLayout>
